<%- include('../../partials/header'); -%>
<body>

<div class="container">

    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
        
        <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 2</li>
            <li class="list-group-item">Info 3</li>
        </div>
    </div>
    
  <div class="col-md-9">

    
    <div class="thumbnail">
    <img src="<%= campground.image %>" alt="" class="img-responsive">
    <div class="caption-full">
        <h4 class="float-right"> $9.00/night</h4>
        <h4 >Welcome to  <a href=""> <%= campground.name %> </a></h4>
        <p><%= campground.description %></p>
        <p><em>author : <%= campground.author.username %></em></p>
    </div>
   </div>

   <div class="well">
       <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
    <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning">Edit</a>
  
    <form style="display: inline;" action="/campgrounds/<%= campground._id %>?_method=delete" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <% } %>
       <div class="text-right">
        <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Add New Comment</a>
      
    </div>
       
   </div>
 
       <hr>

       
    <% campground.comments.forEach(function(comment){ %>
        <div class="row">
            <div class="col-md-12">
            <b><%= comment.author.username %></b>
            <span class="float-right">10 days ago</span>
            <p>
                <%= comment.text %>
            </p>
        </div>
        </div>
     <% }) %> 

   </div>

</div>

</div>
</div>
</body>
</html>